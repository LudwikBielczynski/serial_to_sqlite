#:import RelayControlersLayout widgets.relay_controller.RelayControllersLayout
#:import logout widgets.logout.logout

<ControlScreen@Screen>:
    action_bar: action_bar.__self__
    relay_controller_layout: relay_controller_layout.__self__

    on_enter: root.ids.relay_controller_layout.update_relay_widgets()

    ActionBar:
        id: action_bar
        ActionView:
            use_seperator: True
            ActionPrevious:
                title: 'Watering relays control'
                with_previous: False

            ActionButton:
                text: 'Clear'
                on_press: relay_controller_layout.delete_all_schedule()

            ActionButton:
                text: 'Log Out'
                on_press: logout()

    RelayControllersLayout:
        id: relay_controller_layout
